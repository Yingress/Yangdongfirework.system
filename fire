                                        <div class="border-t my-1"></div>
                                        <button onclick="logout()" class="w-full text-left block px-4 py-2 text-sm text-red-600 hover:bg-red-50">
                                            <i class="fa fa-sign-out mr-2"></i>退出登录
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </header>

                <!-- 内容区域 -->
                <div class="flex-1 overflow-y-auto p-4 md:p-6" id="page-content">
                    <!-- 动态加载内容 -->
                </div>
            </main>
        </div>

        <!-- 移动端底部导航 -->
        <div class="md:hidden fixed bottom-0 left-0 right-0 glass-card border-t z-40">
            <div class="flex justify-around py-3">
                <button data-page="dashboard" class="mobile-nav-btn flex flex-col items-center text-primary">
                    <i class="fa fa-home text-xl mb-1"></i>
                    <span class="text-xs">首页</span>
                </button>
                <button data-page="my-scores" class="mobile-nav-btn flex flex-col items-center text-gray-500">
                    <i class="fa fa-chart-line text-xl mb-1"></i>
                    <span class="text-xs">我的成绩</span>
                </button>
                <button data-page="rankings" class="mobile-nav-btn flex flex-col items-center text-gray-500">
                    <i class="fa fa-trophy text-xl mb-1"></i>
                    <span class="text-xs">排名</span>
                </button>
                <button data-page="profile" class="mobile-nav-btn flex flex-col items-center text-gray-500">
                    <i class="fa fa-user text-xl mb-1"></i>
                    <span class="text-xs">我的</span>
                </button>
            </div>
        </div>
    </div>

    <!-- 通知组件 -->
    <div id="notification" class="fixed top-4 right-4 z-50 transform translate-x-full transition-transform duration-300">
        <div class="bg-white rounded-xl shadow-lg p-4 max-w-sm border-l-4 border-success">
            <div class="flex items-start">
                <div class="flex-shrink-0 text-success">
                    <i class="fa fa-check-circle fa-lg"></i>
                </div>
                <div class="ml-3 flex-1">
                    <p class="text-sm font-medium text-gray-900" id="notification-title"></p>
                    <p class="mt-1 text-sm text-gray-500" id="notification-message"></p>
                </div>
                <button class="close-notification ml-4 flex-shrink-0 text-gray-400 hover:text-gray-500">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- 加载遮罩 -->
    <div id="loading-overlay" class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 hidden">
        <div class="bg-white rounded-xl p-6 shadow-2xl">
            <div class="flex items-center">
                <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary mr-3"></div>
                <span class="text-gray-700">加载中...</span>
            </div>
        </div>
    </div>

    <!-- 骨架屏 -->
    <template id="skeleton-template">
        <div class="space-y-4 p-4">
            <div class="h-8 w-48 skeleton rounded-lg"></div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <div class="h-32 skeleton rounded-xl"></div>
                <div class="h-32 skeleton rounded-xl"></div>
                <div class="h-32 skeleton rounded-xl"></div>
                <div class="h-32 skeleton rounded-xl"></div>
            </div>
            <div class="h-64 skeleton rounded-xl"></div>
        </div>
    </template>

    <script>
        // ==================== 全局变量和配置 ====================
        const APP_CONFIG = {
            appName: '阳东消防考核管理系统',
            version: '2.0.0',
            defaultUsers: {
                admin: { username: 'admin', password: 'admin123', name: '系统管理员', role: 'admin' },
                manager: { username: 'manager', password: 'manager123', name: '部门管理员', role: 'manager' },
                firefighter: { username: 'FD001', password: '123456', name: '郑金秀', role: 'firefighter' }
            },
            departments: ['阳东大队', '特勤一中队', '特勤二中队', '战勤保障大队', '消防训练基地'],
            assessmentItems: [
                { id: 'ITEM_001', name: '3000米跑', type: '体能', unit: '分:秒', maxScore: 100, active: true },
                { id: 'ITEM_002', name: '100米负重跑', type: '体能', unit: '秒', maxScore: 100, active: true },
                { id: 'ITEM_003', name: '单杠引体向上', type: '体能', unit: '次', maxScore: 100, active: true },
                { id: 'ITEM_004', name: '双杠臂屈伸', type: '体能', unit: '次', maxScore: 100, active: true },
                { id: 'ITEM_005', name: '水带铺设', type: '技能', unit: '秒', maxScore: 100, active: true },
                { id: 'ITEM_006', name: '灭火器操作', type: '技能', unit: '分', maxScore: 100, active: true },
                { id: 'ITEM_007', name: '理论知识', type: '理论', unit: '分', maxScore: 100, active: true }
            ]
        };

        // 当前用户状态
        let currentUser = null;
        let currentPage = 'dashboard';
        let pageHistory = [];

        // ==================== 初始化函数 ====================
        document.addEventListener('DOMContentLoaded', function() {
            // 初始化事件监听
            initEventListeners();
            
            // 检查记住的登录信息
            checkRememberedLogin();
            
            // 监控网络状态
            monitorNetwork();
            
            // 显示登录页面
            document.getElementById('login-page').classList.remove('hidden');
            
            // 加载模拟数据到本地存储
            initMockData();
        });

        // ==================== 事件监听器 ====================
        function initEventListeners() {
            // 登录表单提交
            document.getElementById('login-form').addEventListener('submit', function(e) {
                e.preventDefault();
                handleLogin();
            });
            
            // 角色选择
            document.querySelectorAll('.role-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    selectRole(this.dataset.role);
                });
            });
            
            // 移动端菜单
            document.getElementById('mobile-menu-btn').addEventListener('click', function() {
                document.getElementById('mobile-sidebar').classList.remove('-translate-x-full');
            });
            
            document.getElementById('close-mobile-menu').addEventListener('click', function() {
                document.getElementById('mobile-sidebar').classList.add('-translate-x-full');
            });
            
            // 移动端导航
            document.querySelectorAll('.mobile-nav-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const page = this.dataset.page;
                    navigateTo(page);
                    
                    // 更新按钮状态
                    document.querySelectorAll('.mobile-nav-btn').forEach(b => {
                        b.classList.remove('text-primary');
                        b.classList.add('text-gray-500');
                    });
                    this.classList.remove('text-gray-500');
                    this.classList.add('text-primary');
                });
            });
            
            // 通知关闭
            document.querySelector('.close-notification')?.addEventListener('click', hideNotification);
            
            // 全局点击事件
            document.addEventListener('click', function(e) {
                // 页面导航
                if (e.target.matches('[data-page]') || e.target.closest('[data-page]')) {
                    const page = e.target.dataset.page || e.target.closest('[data-page]').dataset.page;
                    navigateTo(page);
                    
                    // 关闭移动端菜单
                    document.getElementById('mobile-sidebar').classList.add('-translate-x-full');
                }
            });
        }

        // ==================== 登录相关函数 ====================
        function selectRole(role) {
            // 根据角色预填账号
            const usernameInput = document.getElementById('username');
            switch(role) {
                case 'firefighter':
                    usernameInput.value = 'FD001';
                    usernameInput.placeholder = '消防员编号';
                    break;
                case 'manager':
                    usernameInput.value = 'manager';
                    usernameInput.placeholder = '管理员账号';
                    break;
                case 'admin':
                    usernameInput.value = 'admin';
                    usernameInput.placeholder = '超级管理员账号';
                    break;
            }
        }

        async function handleLogin() {
            const username = document.getElementById('username').value.trim();
            const password = document.getElementById('password').value;
            const rememberMe = document.getElementById('remember-me').checked;
            
            if (!username || !password) {
                showNotification('登录失败', '请输入账号和密码', 'error');
                return;
            }
            
            // 根据用户名自动判断角色
            let selectedRole = null;
            if (username.startsWith('FD')) {
                selectedRole = 'firefighter';
            } else if (username === 'admin') {
                selectedRole = 'admin';
            } else if (username === 'manager') {
                selectedRole = 'manager';
            } else {
                showNotification('登录失败', '未知账号类型，请联系管理员', 'error');
                return;
            }
            
            // 显示加载中
            showLoading();
            
            try {
                // 模拟网络延迟
                await new Promise(resolve => setTimeout(resolve, 500));
                
                // 验证用户
                let user = null;
                
                // 管理员和超级管理员验证
                if (selectedRole === 'admin' || selectedRole === 'manager') {
                    const defaultUser = APP_CONFIG.defaultUsers[selectedRole];
                    if (defaultUser && username === defaultUser.username && password === defaultUser.password) {
                        user = { ...defaultUser };
                    }
                }
                // 消防员验证
                else if (selectedRole === 'firefighter') {
                    // 从本地存储获取消防员数据
                    const firefighters = JSON.parse(localStorage.getItem('firefighters') || '[]');
                    const firefighter = firefighters.find(f => f.id === username && f.id === password);
                    
                    if (firefighter) {
                        user = {
                            username: firefighter.id,
                            password: firefighter.id,
                            name: firefighter.name,
                            role: 'firefighter',
                            department: firefighter.department,
                            idCard: firefighter.idCard
                        };
                    }
                    
                    // 如果没有找到，检查预设的演示账号
                    const demoFirefighter = APP_CONFIG.defaultUsers.firefighter;
                    if (!user && demoFirefighter && username === demoFirefighter.username && password === username) {
                        user = { ...demoFirefighter, password: username };
                    }
                }
                
                if (user) {
                    // 记住登录信息
                    if (rememberMe) {
                        localStorage.setItem('remembered_login', JSON.stringify({
                            username: user.username,
                            password: user.password,
                            role: user.role,
                            timestamp: Date.now()
                        }));
                    }
                    
                    // 设置当前用户
                    currentUser = user;
                    
                    // 更新UI
                    updateUserUI();
                    
                    // 导航到首页
                    navigateTo('dashboard');
                    
                    // 切换页面
                    document.getElementById('login-page').classList.add('hidden');
                    document.getElementById('app-container').classList.remove('hidden');
                    
                    showNotification('登录成功', `欢迎回来，${user.name}！`);
                } else {
                    if (selectedRole === 'firefighter') {
                        showNotification('登录失败', '编号或身份证后六位错误，或您尚未被录入系统', 'error');
                    } else {
                        showNotification('登录失败', '账号或密码错误', 'error');
                    }
                }
            } catch (error) {
                showNotification('登录失败', '网络错误，请检查连接', 'error');
            } finally {
                hideLoading();
            }
        }

        function checkRememberedLogin() {
            const remembered = localStorage.getItem('remembered_login');
            if (remembered) {
                try {
                    const loginData = JSON.parse(remembered);
                    document.getElementById('username').value = loginData.username || '';
                    document.getElementById('password').value = loginData.password || '';
                    document.getElementById('remember-me').checked = true;
                } catch (error) {
                    // 清除无效的记住登录数据
                    localStorage.removeItem('remembered_login');
                }
            }
        }

        // ==================== 页面导航函数 ====================
        function navigateTo(page, data = null) {
            // 记录历史
            if (currentPage && currentPage !== page) {
                pageHistory.push({
                    page: currentPage,
                    data: currentPageData
                });
            }
            
            currentPage = page;
            currentPageData = data;
            
            // 更新页面标题
            updatePageTitle(page);
            
            // 显示/隐藏返回按钮
            updateBackButton();
            
            // 显示/隐藏导出按钮
            updateExportButton(page);
            
            // 加载页面内容
            loadPage(page, data);
        }

        function goBack() {
            if (pageHistory.length > 0) {
                const previous = pageHistory.pop();
                navigateTo(previous.page, previous.data);
            }
        }

        function updatePageTitle(page) {
            const titles = {
                'dashboard': '仪表盘',
                'my-scores': '我的成绩',
                'rankings': '成绩排名',
                'profile': '个人中心',
                'personnel': '人员管理',
                'assessments': '考核管理',
                'data-board': '数据看板',
                'settings': '系统设置',
                'user-management': '用户管理'
            };
            
            const title = titles[page] || '消防考核系统';
            document.getElementById('page-title').textContent = title;
            document.getElementById('mobile-page-title').textContent = title;
        }

        function updateBackButton() {
            const container = document.getElementById('back-button-container');
            if (pageHistory.length > 0) {
                container.classList.remove('hidden');
            } else {
                container.classList.add('hidden');
            }
        }

        function updateExportButton(page) {
            const container = document.getElementById('export-button-container');
            // 在排名页面显示导出按钮
            if (page === 'rankings') {
                container.classList.remove('hidden');
            } else {
                container.classList.add('hidden');
            }
        }

        function updateUserUI() {
            if (!currentUser) return;
            
            const user = currentUser;
            
            // 更新用户名显示
            ['mobile', 'desktop', 'header'].forEach(type => {
                const element = document.getElementById(`${type}-user-name`);
                if (element) element.textContent = user.name;
            });
            
            // 更新角色显示
            ['mobile', 'desktop'].forEach(type => {
                const element = document.getElementById(`${type}-user-role`);
                if (element) element.textContent = getRoleName(user.role);
            });
            
            // 更新部门显示
            const deptElement = document.getElementById('desktop-user-dept');
            if (deptElement) deptElement.textContent = user.department || '阳东大队';
            
            // 更新菜单
            renderMenu(user.role);
        }

        function getRoleName(role) {
            const roleNames = {
                'admin': '超级管理员',
                'manager': '管理员',
                'firefighter': '消防员'
            };
            return roleNames[role] || '用户';
        }

        function renderMenu(role) {
            const menuItems = {
                admin: [
                    { id: 'dashboard', name: '仪表盘', icon: 'fa-home' },
                    { id: 'personnel', name: '人员管理', icon: 'fa-users' },
                    { id: 'assessments', name: '考核管理', icon: 'fa-clipboard-check' },
                    { id: 'rankings', name: '成绩排名', icon: 'fa-trophy' },
                    { id: 'data-board', name: '数据看板', icon: 'fa-chart-pie' },
                    { id: 'user-management', name: '用户管理', icon: 'fa-user-cog' },
                    { id: 'settings', name: '系统设置', icon: 'fa-cog' }
                ],
                manager: [
                    { id: 'dashboard', name: '仪表盘', icon: 'fa-home' },
                    { id: 'personnel', name: '人员管理', icon: 'fa-users' },
                    { id: 'assessments', name: '考核管理', icon: 'fa-clipboard-check' },
                    { id: 'rankings', name: '成绩排名', icon: 'fa-trophy' },
                    { id: 'data-board', name: '数据看板', icon: 'fa-chart-pie' }
                ],
                firefighter: [
                    { id: 'dashboard', name: '首页', icon: 'fa-home' },
                    { id: 'my-scores', name: '我的成绩', icon: 'fa-chart-line' },
                    { id: 'rankings', name: '成绩排名', icon: 'fa-trophy' },
                    { id: 'profile', name: '个人中心', icon: 'fa-user' }
                ]
            };
            
            const items = menuItems[role] || menuItems.firefighter;
            
            // 桌面端菜单
            const desktopMenu = document.getElementById('desktop-nav-menu');
            if (desktopMenu) {
                desktopMenu.innerHTML = items.map(item => `
                    <a href="#" data-page="${item.id}" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 rounded-xl mb-2 transition-colors hover:text-primary">
                        <i class="fa ${item.icon} mr-3 text-lg"></i>
                        <span>${item.name}</span>
                    </a>
                `).join('');
            }
            
            // 移动端菜单
            const mobileMenu = document.getElementById('mobile-nav-menu');
            if (mobileMenu) {
                mobileMenu.innerHTML = items.map(item => `
                    <a href="#" data-page="${item.id}" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100">
                        <i class="fa ${item.icon} mr-3 text-lg"></i>
                        <span>${item.name}</span>
                    </a>
                `).join('');
            }
        }

        // ==================== 页面加载函数 ====================
        async function loadPage(page, data = null) {
            const content = document.getElementById('page-content');
            
            // 显示骨架屏
            showSkeleton(content);
            
            // 根据页面加载内容
            let html = '';
            
            switch(page) {
                case 'dashboard':
                    html = await loadDashboard();
                    break;
                case 'my-scores':
                    html = await loadMyScores();
                    break;
                case 'rankings':
                    html = await loadRankings();
                    break;
                case 'personnel':
                    html = await loadPersonnelManagement();
                    break;
                case 'assessments':
                    html = await loadAssessmentManagement();
                    break;
                case 'settings':
                    html = await loadSystemSettings();
                    break;
                case 'user-management':
                    html = await loadUserManagement();
                    break;
                default:
                    html = await loadDashboard();
            }
            
            // 设置内容
            content.innerHTML = html;
            
            // 初始化页面组件
            initPageComponents(page);
            
            // 隐藏骨架屏
            setTimeout(() => {
                hideSkeleton(content);
            }, 300);
        }

        async function loadDashboard() {
            if (currentUser.role === 'firefighter') {
                return loadFirefighterDashboard();
            } else {
                return loadAdminDashboard();
            }
        }

        async function loadFirefighterDashboard() {
            const scores = getMyScores();
            const progress = getMyProgress();
            
            return `
                <div class="space-y-6 animate-fade-in">
                    <!-- 欢迎卡片 -->

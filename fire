        function getRankings() {
            // 模拟排名数据
            return {
                overall: Array.from({length: 50}, (_, i) => ({
                    id: `FD${String(i+1).padStart(3, '0')}`,
                    name: i === 0 ? '郑金秀' : `消防员${i+1}`,
                    department: i < 10 ? '阳东大队' : i < 20 ? '特勤一中队' : i < 30 ? '特勤二中队' : '战勤保障',
                    score: 95 - Math.floor(i / 5),
                    scores: {
                        '3000米跑': 95 - i,
                        '引体向上': 92 - i,
                        '负重跑': 90 - i
                    }
                })),
                departments: [
                    { name: '阳东大队', score: 89.5, count: 128, maxScore: 98, minScore: 72 },
                    { name: '特勤一中队', score: 87.2, count: 38, maxScore: 96, minScore: 75 },
                    { name: '特勤二中队', score: 85.7, count: 32, maxScore: 94, minScore: 70 },
                    { name: '战勤保障大队', score: 84.3, count: 42, maxScore: 92, minScore: 68 }
                ],
                items: {
                    '3000米跑': Array.from({length: 10}, (_, i) => ({
                        name: `消防员${i+1}`,
                        score: 95 - i,
                        result: `${Math.floor(10 + i/2)}:${30 + i*2}`
                    }))
                }
            };
        }

        function getFirefighters() {
            const stored = localStorage.getItem('firefighters');
            if (stored) {
                return JSON.parse(stored);
            }
            
            // 返回初始模拟数据
            return initMockData().firefighters;
        }


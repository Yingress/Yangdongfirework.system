    <!-- 骨架屏模板 -->
    <template id="skeleton-template">
        <div class="space-y-8 p-6">
            <div class="h-10 w-64 skeleton rounded-xl"></div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <div class="h-36 skeleton rounded-2xl"></div>
                <div class="h-36 skeleton rounded-2xl"></div>
                <div class="h-36 skeleton rounded-2xl"></div>
                <div class="h-36 skeleton rounded-2xl"></div>
            </div>
            <div class="h-80 skeleton rounded-2xl"></div>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <div class="h-96 skeleton rounded-2xl"></div>
                <div class="h-96 skeleton rounded-2xl"></div>
            </div>
        </div>
    </template>

<script>
        // ==================== 全局配置 ====================
        const APP_CONFIG = {
            appName: '阳东消防考核管理系统',
            version: '3.0.0',
            defaultUsers: {
                admin: { 
                    username: 'admin', 
                    password: 'admin123', 
                    name: '系统管理员', 
                    role: 'admin',
                    avatar: 'fa-user-shield'
                },
                manager: { 
                    username: 'manager', 
                    password: 'manager123', 
                    name: '部门管理员', 
                    role: 'manager',
                    avatar: 'fa-user-tie'
                },
                firefighter: { 
                    username: 'FD001', 
                    password: '123456', 
                    name: '郑金秀', 
                    role: 'firefighter',
                    avatar: 'fa-user',
                    department: '阳东大队'
                }
            },
            departments: [
                { name: '阳东大队', color: 'from-primary to-primary-light' },
                { name: '特勤一中队', color: 'from-secondary to-secondary-light' },
                { name: '特勤二中队', color: 'from-success to-emerald-400' },
                { name: '战勤保障大队', color: 'from-warning to-amber-400' },
                { name: '消防训练基地', color: 'from-purple-500 to-purple-400' }
            ],
            assessmentItems: [
                { 
                    id: 'ITEM_001', 
                    name: '3000米跑', 
                    type: '体能', 
                    unit: '分:秒', 
                    maxScore: 100, 
                    active: true,
                    icon: 'fa-running'
                },
                { 
                    id: 'ITEM_002', 
                    name: '100米负重跑', 
                    type: '体能', 
                    unit: '秒', 
                    maxScore: 100, 
                    active: true,
                    icon: 'fa-weight-hanging'
                },
                { 
                    id: 'ITEM_003', 
                    name: '单杠引体向上', 
                    type: '体能', 
                    unit: '次', 
                    maxScore: 100, 
                    active: true,
                    icon: 'fa-dumbbell'
                },
                { 
                    id: 'ITEM_004', 
                    name: '双杠臂屈伸', 
                    type: '体能', 
                    unit: '次', 
                    maxScore: 100, 
                    active: true,
                    icon: 'fa-hands'
                },
                { 
                    id: 'ITEM_005', 
                    name: '水带铺设', 
                    type: '技能', 
                    unit: '秒', 
                    maxScore: 100, 
                    active: true,
                    icon: 'fa-faucet'
                },
                { 
                    id: 'ITEM_006', 
                    name: '灭火器操作', 
                    type: '技能', 
                    unit: '分', 
                    maxScore: 100, 
                    active: true,
                    icon: 'fa-fire-extinguisher'
                },
                { 
                    id: 'ITEM_007', 
                    name: '理论知识', 
                    type: '理论', 
                    unit: '分', 
                    maxScore: 100, 
                    active: true,
                    icon: 'fa-book'
                }
            ]
        };

        // 当前状态
        let currentUser = null;
        let currentPage = 'dashboard';
        let pageHistory = [];
        let currentPageData = null;

        // ==================== 初始化函数 ====================
        document.addEventListener('DOMContentLoaded', function() {
            initEventListeners();
            checkRememberedLogin();
            monitorNetwork();
            document.getElementById('login-page').classList.remove('hidden');
            initMockData();
            updateDateTime();
            setInterval(updateDateTime, 60000); // 每分钟更新时间
        });

        // ==================== 事件监听器 ====================
        function initEventListeners() {
            // 登录表单
            document.getElementById('login-form').addEventListener('submit', function(e) {
                e.preventDefault();
                handleLogin();
            });
            
            // 角色选择
            document.querySelectorAll('.role-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    selectRole(this.dataset.role);
                });
            });
            
            // 移动端菜单
            document.getElementById('mobile-menu-btn').addEventListener('click', function() {
                document.getElementById('mobile-sidebar').classList.remove('-translate-x-full');
            });
            
            document.getElementById('close-mobile-menu').addEventListener('click', function() {
                document.getElementById('mobile-sidebar').classList.add('-translate-x-full');
            });
            
            // 移动端导航
            document.querySelectorAll('.mobile-nav-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const page = this.dataset.page;
                    navigateTo(page);
                    updateMobileNav(this);
                });
            });
            
            // 通知关闭
            document.querySelector('.close-notification')?.addEventListener('click', hideNotification);
            
            // 全局点击
            document.addEventListener('click', function(e) {
                if (e.target.matches('[data-page]') || e.target.closest('[data-page]')) {
                    const page = e.target.dataset.page || e.target.closest('[data-page]').dataset.page;
                    navigateTo(page);
                    document.getElementById('mobile-sidebar').classList.add('-translate-x-full');
                }
            });
            
            // 记住我复选框
            document.getElementById('remember-me').addEventListener('change', function(e) {
                const checkIcon = this.parentElement.querySelector('.fa-check');
                if (this.checked) {
                    checkIcon.classList.remove('opacity-0');
                } else {
                    checkIcon.classList.add('opacity-0');
                }
            });
        }

        function updateMobileNav(activeBtn) {
            document.querySelectorAll('.mobile-nav-btn').forEach(btn => {
                const iconDiv = btn.querySelector('div');
                btn.classList.remove('text-primary');
                btn.classList.add('text-gray-500');
                iconDiv.classList.remove('from-primary/20', 'to-primary/10');
                iconDiv.classList.add('bg-gray-100');
            });
            
            activeBtn.classList.remove('text-gray-500');
            activeBtn.classList.add('text-primary');
            const activeIconDiv = activeBtn.querySelector('div');
            activeIconDiv.classList.remove('bg-gray-100');
            activeIconDiv.classList.add('bg-gradient-to-br', 'from-primary/20', 'to-primary/10');
        }

        // ==================== 登录函数 ====================
        function selectRole(role) {
            document.querySelectorAll('.role-btn').forEach(btn => {
                btn.classList.remove('border-primary', 'border-secondary', 'border-warning');
                btn.classList.add('border-gray-200/50');
            });
            
            const selectedBtn = document.querySelector(`[data-role="${role}"]`);
            let borderColor = 'border-primary';
            if (role === 'manager') borderColor = 'border-secondary';
            if (role === 'admin') borderColor = 'border-warning';
            
            selectedBtn.classList.remove('border-gray-200/50');
            selectedBtn.classList.add(borderColor);
            
            const usernameInput = document.getElementById('username');
            switch(role) {
                case 'firefighter':
                    usernameInput.value = 'FD001';
                    usernameInput.placeholder = '请输入消防员编号';
                    break;
                case 'manager':
                    usernameInput.value = 'manager';
                    usernameInput.placeholder = '请输入管理员账号';
                    break;
                case 'admin':
                    usernameInput.value = 'admin';
                    usernameInput.placeholder = '请输入超级管理员账号';
                    break;
            }
        }

        async function handleLogin() {
            const username = document.getElementById('username').value.trim();
            const password = document.getElementById('password').value;
            const rememberMe = document.getElementById('remember-me').checked;
            const selectedRole = document.querySelector('.role-btn.active')?.dataset.role;
            
            if (!username || !password) {
                showNotification('登录失败', '请输入账号和密码', 'error');
                return;
            }
            
            if (!selectedRole) {
                showNotification('登录失败', '请选择登录身份', 'error');
                return;
            }
            
            showLoading('正在验证身份...');
            
            try {
                await new Promise(resolve => setTimeout(resolve, 800));
                
                let user = null;
                
                // 管理员验证
                if (selectedRole === 'admin' || selectedRole === 'manager') {
                    const defaultUser = APP_CONFIG.defaultUsers[selectedRole];
                    if (defaultUser && username === defaultUser.username && password === defaultUser.password) {
                        user = { ...defaultUser };
                    }
                }
                // 消防员验证
                else if (selectedRole === 'firefighter') {
                    const firefighters = JSON.parse(localStorage.getItem('firefighters') || '[]');
                    const firefighter = firefighters.find(f => f.id === username && f.idCard?.slice(-6) === password);
                    
                    if (firefighter) {
                        user = {
                            username: firefighter.id,
                            password: firefighter.idCard.slice(-6),
                            name: firefighter.name,
                            role: 'firefighter',
                            department: firefighter.department,
                            avatar: 'fa-user'
                        };
                    }
                    
                    // 演示账号
                    const demoFirefighter = APP_CONFIG.defaultUsers.firefighter;
                    if (!user && demoFirefighter && username === demoFirefighter.username && password === demoFirefighter.password) {
                        user = { ...demoFirefighter };
                    }
                }
                
                if (user) {
                    // 记住登录
                    if (rememberMe) {
                        localStorage.setItem('remembered_login', JSON.stringify({
                            username: user.username,
                            password: user.password,
                            role: user.role,
                            timestamp: Date.now()
                        }));
                    }
                    
                    currentUser = user;
                    updateUserUI();
                    navigateTo('dashboard');
                    
                    document.getElementById('login-page').classList.add('hidden');
                    document.getElementById('app-container').classList.remove('hidden');
                    
                    showNotification('登录成功', `欢迎回来，${user.name}！`);
                } else {
                    showNotification('登录失败', '账号或密码错误，请重试', 'error');
                }
            } catch (error) {
                showNotification('登录失败', '网络错误，请检查连接', 'error');
            } finally {
                hideLoading();
            }
        }

        function checkRememberedLogin() {
            const remembered = localStorage.getItem('remembered_login');
            if (remembered) {
                try {
                    const loginData = JSON.parse(remembered);
                    document.getElementById('username').value = loginData.username || '';
                    document.getElementById('password').value = loginData.password || '';
                    document.getElementById('remember-me').checked = true;
                    
                    // 触发复选框样式更新
                    document.getElementById('remember-me').dispatchEvent(new Event('change'));
                    
                    if (loginData.username.startsWith('FD')) {
                        selectRole('firefighter');
                    } else if (loginData.username.includes('admin')) {
                        selectRole('admin');
                    } else {
                        selectRole('manager');
                    }
                } catch (error) {
                    localStorage.removeItem('remembered_login');
                }
            }
        }

        // ==================== 页面导航 ====================
        function navigateTo(page, data = null) {
            if (currentPage && currentPage !== page) {
                pageHistory.push({
                    page: currentPage,
                    data: currentPageData
                });
            }
            
            currentPage = page;
            currentPageData = data;
            
            updatePageTitle(page);
            updateBackButton();
            updateExportButton(page);
            loadPage(page, data);
            
            // 更新移动端导航
            const mobileBtn = document.querySelector(`.mobile-nav-btn[data-page="${page}"]`);
            if (mobileBtn) {
                updateMobileNav(mobileBtn);
            }
        }

        function goBack() {
            if (pageHistory.length > 0) {
                const previous = pageHistory.pop();
                navigateTo(previous.page, previous.data);
            }
        }

        function updatePageTitle(page) {
            const titles = {
                'dashboard': '仪表盘',
                'my-scores': '我的成绩',
                'rankings': '成绩排名',
                'profile': '个人中心',
                'personnel': '人员管理',
                'assessments': '考核管理',
                'data-board': '数据看板',
                'settings': '系统设置',
                'user-management': '用户管理'
            };
            
            const title = titles[page] || '消防考核系统';
            document.getElementById('page-title').textContent = title;
            document.getElementById('mobile-page-title').textContent = title;
        }

        function updateBackButton() {
            const container = document.getElementById('back-button-container');
            container.classList.toggle('hidden', pageHistory.length === 0);
        }

        function updateExportButton(page) {
            const container = document.getElementById('export-button-container');
            container.classList.toggle('hidden', page !== 'rankings');
        }

        function updateUserUI() {
            if (!currentUser) return;
            
            const user = currentUser;
            
            // 更新用户名
            ['mobile', 'desktop', 'header'].forEach(type => {
                const element = document.getElementById(`${type}-user-name`);
                if (element) element.textContent = user.name;
            });
            
            // 更新角色
            ['mobile', 'desktop'].forEach(type => {
                const element = document.getElementById(`${type}-user-role`);
                if (element) element.textContent = getRoleName(user.role);
            });
            
            // 更新部门
            const deptElement = document.getElementById('desktop-user-dept');
            if (deptElement) deptElement.textContent = user.department || '阳东大队';
            
            // 更新菜单
            renderMenu(user.role);
        }

        function getRoleName(role) {
            const roleNames = {
                'admin': '超级管理员',
                'manager': '管理员',
                'firefighter': '消防员'
            };
            return roleNames[role] || '用户';
        }

        function renderMenu(role) {
            const menuItems = {
                admin: [
                    { id: 'dashboard', name: '仪表盘', icon: 'fa-home', color: 'text-primary' },
                    { id: 'personnel', name: '人员管理', icon: 'fa-users', color: 'text-blue-500' },
                    { id: 'assessments', name: '考核管理', icon: 'fa-clipboard-check', color: 'text-green-500' },
                    { id: 'rankings', name: '成绩排名', icon: 'fa-trophy', color: 'text-yellow-500' },
                    { id: 'data-board', name: '数据看板', icon: 'fa-chart-pie', color: 'text-purple-500' },
                    { id: 'user-management', name: '用户管理', icon: 'fa-user-cog', color: 'text-indigo-500' },
                    { id: 'settings', name: '系统设置', icon: 'fa-cog', color: 'text-gray-500' }
                ],
                manager: [
                    { id: 'dashboard', name: '仪表盘', icon: 'fa-home', color: 'text-primary' },
                    { id: 'personnel', name: '人员管理', icon: 'fa-users', color: 'text-blue-500' },
                    { id: 'assessments', name: '考核管理', icon: 'fa-clipboard-check', color: 'text-green-500' },
                    { id: 'rankings', name: '成绩排名', icon: 'fa-trophy', color: 'text-yellow-500' },
                    { id: 'data-board', name: '数据看板', icon: 'fa-chart-pie', color: 'text-purple-500' }
                ],
                firefighter: [
                    { id: 'dashboard', name: '首页', icon: 'fa-home', color: 'text-primary' },
                    { id: 'my-scores', name: '我的成绩', icon: 'fa-chart-line', color: 'text-green-500' },
                    { id: 'rankings', name: '成绩排名', icon: 'fa-trophy', color: 'text-yellow-500' },
                    { id: 'profile', name: '个人中心', icon: 'fa-user', color: 'text-blue-500' }
                ]
            };
            
            const items = menuItems[role] || menuItems.firefighter;
            
            // 桌面端菜单
            const desktopMenu = document.getElementById('desktop-nav-menu');
            if (desktopMenu) {
                desktopMenu.innerHTML = items.map(item => `
                    <a href="#" data-page="${item.id}" 
                        class="menu-item flex items-center px-5 py-4 text-gray-700 hover:bg-gray-100/50 rounded-2xl mb-2 transition-all duration-300 hover:translate-x-2">
                        <i class="fa ${item.icon} ${item.color} text-xl mr-4"></i>
                        <span class="font-medium">${item.name}</span>
                        <i class="fa fa-chevron-right ml-auto text-gray-300 text-sm"></i>
                    </a>
                `).join('');
            }
            
            // 移动端菜单
            const mobileMenu = document.getElementById('mobile-nav-menu');
            if (mobileMenu) {
                mobileMenu.innerHTML = items.map(item => `
                    <a href="#" data-page="${item.id}" 
                        class="flex items-center px-5 py-4 text-gray-700 hover:bg-gray-100/50 rounded-2xl mb-2 transition-colors">
                        <i class="fa ${item.icon} ${item.color} text-xl mr-4"></i>
                        <span class="font-medium">${item.name}</span>
                    </a>
                `).join('');
            }
        }

// ==================== 页面加载函数 ====================
        async function loadPage(page, data = null) {
            const content = document.getElementById('page-content');
            showSkeleton(content);
            
            let html = '';
            try {
                switch(page) {
                    case 'dashboard':
                        html = await loadDashboard();
                        break;
                    case 'my-scores':
                        html = await loadMyScores();
                        break;
                    case 'rankings':
                        html = await loadRankings();
                        break;
                    case 'personnel':
                        html = await loadPersonnelManagement();
                        break;
                    case 'assessments':
                        html = await loadAssessmentManagement();
                        break;
                    case 'settings':
                        html = await loadSystemSettings();
                        break;
                    default:
                        html = await loadDashboard();
                }
                
                content.innerHTML = html;
                initPageComponents(page);
            } catch (error) {
                content.innerHTML = `
                    <div class="flex flex-col items-center justify-center h-full p-8">
                        <div class="h-24 w-24 rounded-full bg-red-100 flex items-center justify-center mb-6">
                            <i class="fa fa-exclamation-triangle text-red-500 text-3xl"></i>
                        </div>
                        <h2 class="text-2xl font-bold text-gray-800 mb-2">加载失败</h2>
                        <p class="text-gray-600 mb-6">页面加载时出现错误</p>
                        <button onclick="navigateTo('dashboard')" 
                            class="btn-primary px-6 py-3 rounded-xl">
                            返回首页
                        </button>
                    </div>
                `;
            }
            
            setTimeout(() => hideSkeleton(content), 300);
        }

        async function loadDashboard() {
            if (currentUser.role === 'firefighter') {
                return loadFirefighterDashboard();
            } else {
                return loadAdminDashboard();
            }
        }


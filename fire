        function saveSystemSettings() {
            const systemName = document.getElementById('system-name')?.value;
            const organization = document.getElementById('organization')?.value;
            const defaultPeriod = document.getElementById('default-period')?.value;
            const passScore = document.getElementById('pass-score')?.value;
            
            if (systemName && organization) {
                const settings = {
                    systemName,
                    organization,
                    defaultPeriod,
                    passScore: parseInt(passScore) || 60,
                    theme: document.querySelector('input[name="theme"]:checked')?.value || 'light'
                };
                
                localStorage.setItem('system_settings', JSON.stringify(settings));
                showNotification('保存成功', '系统设置已保存');
            }
        }

        function logout() {
            if (confirm('确定要退出登录吗？')) {
                // 清除当前用户
                currentUser = null;
                
                // 返回登录页面
                document.getElementById('login-page').classList.remove('hidden');
                document.getElementById('app-container').classList.add('hidden');
                
                // 重置页面历史
                pageHistory = [];
                currentPage = 'dashboard';
                
                showNotification('已退出登录', '欢迎下次使用');
            }
        }


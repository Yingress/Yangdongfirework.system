        // ==================== 数据初始化 ====================
        function initMockData() {
            // 模拟消防员数据
            const firefighters = Array.from({length: 50}, (_, i) => ({
                id: `FD${String(i+1).padStart(3, '0')}`,
                name: i === 0 ? '郑金秀' : `消防员${i+1}`,
                age: 25 + Math.floor(Math.random() * 15),
                gender: Math.random() > 0.1 ? '男' : '女',
                department: i < 10 ? '阳东大队' : i < 20 ? '特勤一中队' : i < 30 ? '特勤二中队' : '战勤保障',
                position: i === 0 ? '中队长' : i < 5 ? '副中队长' : i < 10 ? '指导员' : '消防员',
                joinDate: `202${Math.floor(Math.random() * 4)}-${String(Math.floor(Math.random() * 12) + 1).padStart(2, '0')}-${String(Math.floor(Math.random() * 28) + 1).padStart(2, '0')}`
            }));
            
            // 保存到本地存储
            localStorage.setItem('firefighters', JSON.stringify(firefighters));
            
            return { firefighters };
        }

        // ==================== 页面组件初始化 ====================
        function initPageComponents(page) {
            switch(page) {
                case 'dashboard':
                    initDashboardCharts();
                    break;
                case 'rankings':
                    initRankingCharts();
                    break;
                case 'settings':
                    initSettingsTabs();
                    break;
            }
            
            // 初始化标签页
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const tab = this.dataset.tab;
                    showTab(tab);
                });
            });
        }

        function showTab(tab) {
            // 更新标签按钮状态
            document.querySelectorAll('.tab-btn').forEach(btn => {
                if (btn.dataset.tab === tab) {
                    btn.classList.add('border-primary', 'text-primary');
                    btn.classList.remove('border-transparent', 'text-gray-600');
                } else {
                    btn.classList.remove('border-primary', 'text-primary');
                    btn.classList.add('border-transparent', 'text-gray-600');
                }
            });
            
            // 显示对应的标签内容
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.add('hidden');
            });
            
            document.getElementById(`tab-${tab}`)?.classList.remove('hidden');
        }

        function initDashboardCharts() {
            // 部门通过率图表
            const deptCtx = document.getElementById('deptPassRateChart');
            if (deptCtx) {
                setTimeout(() => {
                    new Chart(deptCtx, {
                        type: 'bar',
                        data: {
                            labels: ['特勤一中队', '特勤二中队', '战勤保障', '训练基地', '阳东大队'],
                            datasets: [{
                                label: '通过率',
                                data: [92, 88, 95, 85, 92.5],
                                backgroundColor: [
                                    'rgba(231, 29, 54, 0.8)',
                                    'rgba(231, 29, 54, 0.6)',
                                    'rgba(231, 29, 54, 0.4)',
                                    'rgba(231, 29, 54, 0.2)',
                                    'rgba(10, 36, 99, 0.8)'
                                ]
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: { display: false }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    max: 100,
                                    ticks: {
                                        callback: value => value + '%'
                                    }
                                }
                            }
                        }
                    });
                }, 100);
            }
            
            // 考核趋势图表
            const trendCtx = document.getElementById('assessmentTrendChart');
            if (trendCtx) {
                setTimeout(() => {
                    new Chart(trendCtx, {
                        type: 'line',
                        data: {
                            labels: ['7月', '8月', '9月', '10月', '11月', '12月'],
                            datasets: [{
                                label: '考核人数',
                                data: [110, 115, 118, 122, 125, 128],
                                borderColor: '#0A2463',
                                backgroundColor: 'rgba(10, 36, 99, 0.1)',
                                tension: 0.3
                            }, {
                                label: '通过率',
                                data: [88, 89, 90, 91, 92, 92.5],
                                borderColor: '#E71D36',
                                backgroundColor: 'rgba(231, 29, 54, 0.1)',
                                tension: 0.3
                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    max: 150
                                }
                            }
                        }
                    });
                }, 100);
            }
        }

        function initSettingsTabs() {
            // 默认显示第一个标签页
            showTab('basic');
        }

        // ==================== 导出功能 ====================
        function exportRankings() {
            try {
                showLoading('正在导出排名数据...');
                
                const rankings = getRankings();
                
                // 创建工作簿
                const wb = XLSX.utils.book_new();
                
                // 创建综合排名工作表
                const overallData = rankings.overall.map((rank, index) => ({
                    排名: index + 1,
                    姓名: rank.name,
                    部门: rank.department,
                    综合得分: rank.score,
                    体能得分: rank.scores['体能'] || '',
                    技能得分: rank.scores['技能'] || '',
                    理论得分: rank.scores['理论'] || ''
                }));
                
                const wsOverall = XLSX.utils.json_to_sheet(overallData);
                XLSX.utils.book_append_sheet(wb, wsOverall, '综合排名');
                
                // 创建部门排名工作表
                const deptData = rankings.departments.map((dept, index) => ({
                    排名: index + 1,
                    部门: dept.name,
                    平均分: dept.score,
                    人数: dept.count,
                    最高分: dept.maxScore,
                    最低分: dept.minScore
                }));
                
                const wsDept = XLSX.utils.json_to_sheet(deptData);
                XLSX.utils.book_append_sheet(wb, wsDept, '部门排名');
                
                // 导出文件
                const fileName = `消防考核排名_${new Date().toLocaleDateString()}.xlsx`;
                XLSX.writeFile(wb, fileName);
                
                showNotification('导出成功', `排名数据已导出为 ${fileName}`);
            } catch (error) {
                showNotification('导出失败', '请检查网络连接后重试', 'error');
            } finally {
                hideLoading();
            }
        }

        function exportDashboardData() {
            try {
                showLoading('正在准备导出数据...');
                
                const stats = getDashboardStats();
                const assessments = getAssessments();
                
                // 创建工作簿
                const wb = XLSX.utils.book_new();
                
                // 统计数据
                const statsData = stats.map(stat => ({
                    指标: stat.label,
                    数值: stat.value,
                    变化趋势: stat.trend > 0 ? `上升 ${stat.trend}%` : `下降 ${Math.abs(stat.trend)}%`
                }));
                
                const wsStats = XLSX.utils.json_to_sheet(statsData);
                XLSX.utils.book_append_sheet(wb, wsStats, '统计概览');
                
                // 考核数据
                const assessmentData = assessments.map(assessment => ({
                    考核名称: assessment.name,
                    考核日期: assessment.date,
                    考核类型: assessment.type,
                    参与人数: assessment.participants,
                    通过率: `${assessment.passRate}%`,
                    状态: assessment.status === 'completed' ? '已完成' : '进行中'
                }));
                
                const wsAssessments = XLSX.utils.json_to_sheet(assessmentData);
                XLSX.utils.book_append_sheet(wb, wsAssessments, '考核记录');
                
                // 导出文件
                const fileName = `消防考核数据_${new Date().toLocaleDateString()}.xlsx`;
                XLSX.writeFile(wb, fileName);
                
                showNotification('导出成功', `数据已导出为 ${fileName}`);
            } catch (error) {
                showNotification('导出失败', '导出过程中出现错误', 'error');
            } finally {
                hideLoading();
            }
        }

        // ==================== 网络监控 ====================
        function monitorNetwork() {
            const updateNetworkStatus = () => {
                const isOnline = navigator.onLine;
                const indicator = document.getElementById('network-indicator');
                const networkStatus = document.getElementById('network-status');
                
                if (indicator) {
                    indicator.innerHTML = `
                        <i class="fa fa-${isOnline ? 'wifi' : 'signal'} mr-1"></i>
                        ${isOnline ? '在线' : '离线'}
                    `;
                    indicator.className = `px-3 py-1 ${isOnline ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'} rounded-full text-xs`;
                }
                
                if (networkStatus) {
                    if (isOnline) {
                        networkStatus.classList.add('hidden');
                    } else {
                        networkStatus.classList.remove('hidden');
                        networkStatus.innerHTML = `
                            <i class="fa fa-exclamation-triangle mr-1"></i>
                            <span>当前处于离线模式</span>
                        `;
                    }
                }
            };
            
            // 初始状态
            updateNetworkStatus();
            
            // 监听网络状态变化
            window.addEventListener('online', updateNetworkStatus);
            window.addEventListener('offline', updateNetworkStatus);
        }

        // ==================== UI 辅助函数 ====================
        function showNotification(title, message, type = 'success') {
            const notification = document.getElementById('notification');
            const titleEl = document.getElementById('notification-title');
            const messageEl = document.getElementById('notification-message');
            
            // 设置通知类型
            let borderColor = 'border-success';
            let icon = 'fa-check-circle';
            
            if (type === 'error') {
                borderColor = 'border-secondary';
                icon = 'fa-exclamation-circle';
            } else if (type === 'warning') {
                borderColor = 'border-warning';
                icon = 'fa-exclamation-triangle';
            } else if (type === 'info') {
                borderColor = 'border-primary';
                icon = 'fa-info-circle';
            }
            
            // 更新内容
            notification.className = `fixed top-4 right-4 z-50 transform translate-x-full transition-transform duration-300 border-l-4 ${borderColor}`;
            notification.querySelector('.flex-shrink-0').innerHTML = `<i class="fa ${icon} fa-lg"></i>`;
            titleEl.textContent = title;
            messageEl.textContent = message;
            
            // 显示通知
            setTimeout(() => {
                notification.classList.remove('translate-x-full');
            }, 10);
            
            // 自动隐藏
            setTimeout(() => {
                hideNotification();
            }, 3000);
        }

        function hideNotification() {
            const notification = document.getElementById('notification');
            notification.classList.add('translate-x-full');
        }

        function showLoading(message = '加载中...') {
            const loadingEl = document.getElementById('loading-overlay');
            if (loadingEl) {
                loadingEl.querySelector('span').textContent = message;
                loadingEl.classList.remove('hidden');
            }
        }

        function hideLoading() {
            const loadingEl = document.getElementById('loading-overlay');
            if (loadingEl) {
                loadingEl.classList.add('hidden');
            }
        }

        function showSkeleton(container) {
            const skeletonTemplate = document.getElementById('skeleton-template');
            container.innerHTML = skeletonTemplate.innerHTML;
        }

        function hideSkeleton(container) {
            // 移除骨架屏动画
            container.querySelectorAll('.skeleton').forEach(el => {
                el.classList.remove('skeleton');
                el.classList.add('bg-gray-200');
            });
        }

        // ==================== 示例功能函数 ====================
        function showProgressChart() {
            // 创建模态框
            const modal = document.createElement('div');
            modal.className = 'fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4';
            modal.innerHTML = `
                <div class="bg-white rounded-2xl w-full max-w-2xl max-h-[90vh] overflow-hidden animate-fade-in">
                    <div class="gradient-bg px-6 py-4">
                        <div class="flex items-center justify-between">
                            <h3 class="text-lg font-semibold text-white">个人进步分析</h3>
                            <button class="text-white hover:text-gray-200 close-modal">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="p-6 overflow-y-auto max-h-[calc(90vh-120px)]">
                        <div class="space-y-4">
                            <div class="h-64">
                                <canvas id="progressChartModal"></canvas>
                            </div>
                            <div class="text-sm text-gray-500">
                                <i class="fa fa-info-circle mr-1"></i>
                                图表显示最近6个月的成绩变化趋势
                            </div>
                        </div>
                    </div>
                    <div class="px-6 py-4 border-t flex justify-end">
                        <button class="close-modal px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-xl">
                            关闭
                        </button>
                    </div>
                </div>
            `;
            
            document.body.appendChild(modal);
            
            // 初始化图表
            setTimeout(() => {
                const ctx = document.getElementById('progressChartModal');
                if (ctx) {
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: ['7月', '8月', '9月', '10月', '11月', '12月'],
                            datasets: [{
                                label: '个人成绩',
                                data: [85, 87, 90, 88, 92, 94],
                                borderColor: '#0A2463',
                                backgroundColor: 'rgba(10, 36, 99, 0.1)',
                                tension: 0.3,
                                fill: true
                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    max: 100
                                }
                            }
                        }
                    });
                }
            }, 100);
            
            // 关闭事件
            modal.querySelectorAll('.close-modal').forEach(btn => {
                btn.addEventListener('click', () => modal.remove());
            });
            
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    modal.remove();
                }
            });
        }

        function showWeaknessAnalysis() {

                                <p class="text-2xl font-bold mt-1 text-green-300">↑5%</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- 快速入口 -->
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">

                                        <th class="px-6 py-3">姓名</th>
                                        <th class="px-6 py-3">年龄</th>
                                        <th class="px-6 py-3">性别</th>
                                        <th class="px-6 py-3">部门</th>
                                        <th class="px-6 py-3">职位</th>
                                        <th class="px-6 py-3">入职日期</th>
                                        <th class="px-6 py-3">操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    ${personnel.slice(0, 10).map(person => `
                                        <tr class="border-b hover:bg-gray-50">
                                            <td class="px-6 py-4"><input type="checkbox" class="personnel-checkbox rounded border-gray-300" data-id="${person.id}"></td>
                                            <td class="px-6 py-4 font-medium">${person.id}</td>
                                            <td class="px-6 py-4">${person.name}</td>
                                            <td class="px-6 py-4">${person.age}</td>
                                            <td class="px-6 py-4">${person.gender}</td>
                                            <td class="px-6 py-4">

        }

        async function loadRankings() {
            const rankings = getRankings();
            
            return `
                <div class="space-y-8 animate-fade-in-up">
                    <div class="flex items-center justify-between">
                        <div>
                            <h1 class="text-3xl font-bold text-gray-800">成绩排名</h1>
                            <p class="text-gray-600 mt-2">实时更新的大队综合排名</p>
                        </div>
                        <button onclick="exportRankings()" class="btn-primary px-8 py-4 rounded-2xl text-lg">
                            <i class="fa fa-download mr-3"></i>导出排名
                        </button>
                    </div>
                    
                    <!-- 排名表格 -->
                    <div class="glass-card overflow-hidden">
                        <div class="px-8 py-6 border-b border-gray-200/50">
                            <div class="flex items-center justify-between">
                                <h3 class="text-xl font-bold text-gray-800">综合成绩排名</h3>
                                <div class="flex items-center space-x-4">
                                    <div class="relative">
                                        <select class="appearance-none bg-white border border-gray-300 rounded-xl px-5 py-3 pr-10 focus:ring-2 focus:ring-primary focus:border-transparent">
                                            <option>全部项目</option>
                                            <option>体能项目</option>
                                            <option>技能项目</option>
                                        </select>
                                        <div class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 pointer-events-none">
                                            <i class="fa fa-chevron-down"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="overflow-x-auto">
                            <table class="table-modern min-w-full">
                                <thead>
                                    <tr>
                                        <th class="px-8 py-6 text-left font-semibold text-gray-700">排名</th>
                                        <th class="px-8 py-6 text-left font-semibold text-gray-700">姓名</th>
                                        <th class="px-8 py-6 text-left font-semibold text-gray-700">部门</th>
                                        <th class="px-8 py-6 text-left font-semibold text-gray-700">3000米跑</th>
                                        <th class="px-8 py-6 text-left font-semibold text-gray-700">引体向上</th>
                                        <th class="px-8 py-6 text-left font-semibold text-gray-700">综合得分</th>
                                        <th class="px-8 py-6 text-left font-semibold text-gray-700">操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    ${rankings.overall.slice(0, 10).map((rank, index) => `
                                        <tr class="hover:bg-gradient-to-r hover:from-primary/5 hover:to-transparent">
                                            <td class="px-8 py-6">
                                                <div class="flex items-center">
                                                    <span class="h-12 w-12 rounded-2xl ${index < 3 ? 'gradient-bg' : 'bg-gray-100'} flex items-center justify-center text-${index < 3 ? 'white' : 'gray-800'} font-bold text-lg">
                                                        ${index + 1}
                                                    </span>
                                                </div>
                                            </td>
                                            <td class="px-8 py-6">
                                                <div class="flex items-center">
                                                    <div class="h-12 w-12 rounded-2xl ${index < 3 ? 'gradient-bg' : 'bg-gray-100'} flex items-center justify-center mr-4">
                                                        <i class="fa fa-user ${index < 3 ? 'text-white' : 'text-gray-600'}"></i>
                                                    </div>
                                                    <div>
                                                        <p class="font-semibold text-gray-800">${rank.name}</p>
                                                        <p class="text-sm text-gray-500">${rank.id}</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="px-8 py-6">
                                                <span class="badge badge-primary">${rank.department}</span>
                                            </td>
                                            <td class="px-8 py-6">
                                                <div class="font-bold text-primary">${rank.scores['3000米跑']}分</div>
                                            </td>
                                            <td class="px-8 py-6">
                                                <div class="font-bold text-primary">${rank.scores['引体向上']}分</div>
                                            </td>
                                            <td class="px-8 py-6">
                                                <div class="text-2xl font-bold text-primary">${rank.score}</div>
                                            </td>
                                            <td class="px-8 py-6">
                                                <button class="text-primary font-medium hover:underline">
                                                    查看详情
                                                </button>
                                            </td>
                                        </tr>
                                    `).join('')}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            `;
        }

